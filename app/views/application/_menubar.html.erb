<% if is_authenticated? %>
    <div id="menubar">
      <ul>
        <li><%= link_to "Main", root_path %></li>
        <% if current_user and current_user.write_entries? %>
            <li><%= link_to "Log Event", new_event_path %></li>
        <% end %>
        <% if current_user and current_user.add_lost_and_found? %>
            <li><%= link_to "Lost/Found", lost_and_found_path %></li>
        <% end %>
        <% if current_user and current_user.write_entries? %>
            <li><%= link_to "Messages", messages_path %></li>
        <% end %>
        <!--li><a href="/equipment">Equipment</a></li-->
        <li><%= link_to "Review", events_path %></li>
        <% if can_admin_anything? %>
            <li><%= link_to "Admin", admin_path %></li>
        <% end %>
        <li><%= link_to "Log Out", signout_path %></li>
        <li><a target="_new" href="https://github.com/conOnRails/ConOnRails/issues">Bug Report</a></li>
      </ul>
    </div>
<% end %>
