<h1>The Master Log</h1>
<div id="paginator"><%= paginate @audits, remote: true if @audits %></div>
<div id="filters">
  <%= form_tag :audits, method: :get, remote: true do %>
      <div>
        <%= check_box_tag :use_start_date %>
        <%= label_tag :start_date %>
        <%= datetime_select :start_date, :item, start_year: DateTime.now.year %>
      </div>
      <div>
        <%= check_box_tag :use_end_date %>
        <%= label_tag :end_date %>
        <%= datetime_select :end_date, :item, end_year: DateTime.now.year %>
      </div>
      <div>
        <%= check_box_tag :events %>
        <%= label_tag :events, "Events and Entries" %>
        <%= check_box_tag :lfi %>
        <%= label_tag :lfi, "Lost and Found" %>
      </div>
      <%= submit_tag "Filter" %>
  <% end %>
  <%= form_tag :audits, method: :get, remote: true do %>
      <%= submit_tag "Clear Filter" %>
  <% end %>
</div>
<table id="audit_table">
  <colgroup>
    <col id="created_at">
    <col id="audited_changes">
  </colgroup>
  <tbody id="audit_table_body">
  <%= render @audits if @audits %>
  </tbody>

</table>
<div id="paginator"><%= paginate @audits, remote: true if @audits %></div>
