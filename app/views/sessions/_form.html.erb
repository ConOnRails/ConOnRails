<div id="login_form">
	<h1>Log In</h1>
	<%= form_tag sessions_path do %>

	<div class="field">
		<div><%= label_tag :name %></div>
		<div><%= text_field_tag :name %></div>
	</div>
	<div class="field">
		<div><%= label_tag :password %></div>
		<div><%= password_field_tag :password %></div>
	</div>
	<div class="actions">
		<%= submit_tag "Log in" %>
	</div>
	<% end %>
</div>
