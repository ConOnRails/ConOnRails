<li class="entry">
  <% created_or_updated = (entry == event.entries.first) ? "created" : "updated" %>
  <div class="entry_metadata">
    <div class="date"><%= entry.created_at.getlocal.ctime %></div>
    <div class="volunteer"><%= created_or_updated %> by <%= link_to entry.user.realname, entry.user %>
      as <%= entry.rolename %></div>
  </div>
  <div class="description"><%= entry.description %></div>
</li>
