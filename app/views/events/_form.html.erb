<% if @event.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

	<ul>
		<% @event.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<% end %>
	</ul>
</div>
<% end %>

<%= semantic_form_for @event do |f| %>
	<%= f.inputs %>
	<%= f.buttons %>
<% end %>

<%= form_for(@event) do |f| %>

<%= f.fields_for :entries do |e| %>
<div class="entry_metadata">
	<%= e.hidden_field :user_id %>
	<%= e.hidden_field :event_id %>

	<div><strong>Created by </strong> <%= link_to @user %></div>
</div>
<div class="field">
	<%= e.label :description %><br />
	<%= e.text_area :description, rows: 10, cols: 80 %>
</div>

<% end %>

<div class="actions">
	<%= f.submit %>
</div>

<% end %>
