<% style = '' %>
<% tags = '' %>
<% if event.is_active? %>
	<% style << "active " %>
	<% tags << "Current Active " %>
<% end %>

<% if event.medical? %>
	<% style << "medical "%>
	<% tags << "Medical " %> 
<% end %>

<% if event.emergency? %>
	<% style << "emergency "%>
	<% tags << "Emergency"%>
<% elsif event.sticky? %>
	<% style << "sticky "%>
	<% tags << "Sticky " %>
<% else %>
	<% tags << "Issue" %>
<% end %>

<span class="<%= style %>" ><%= tags %></span>

<% if !form %>
	<span class="update">&nbsp;&bull;&nbsp;<%= link_to 'Update or Append', edit_event_path(event) %></span>
<% end %>
