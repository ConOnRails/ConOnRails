<%= render partial: 'contacts/search' %>

<h1>Active messages</h1>

<div class="button">
  <%= link_to 'New Message', new_message_path, class: 'button' %>
</div>
<div id="paginator"><%= paginate @messages %></div>

<%= render partial: "message", collection: @messages %>

<% if @messages.count > 0 %>
    <div class="button">
      <%= link_to 'New Message', new_message_path, class: 'button' %>
    </div>
<% end %>
<div id="paginator"><%= paginate @messages %></div>

<%= content_for :side do %>
    <div>
      <%= link_to "Contacts", contacts_path %>
    </div>
<% end %>
