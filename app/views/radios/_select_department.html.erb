<%= semantic_form_for RadioAssignment.new do |f| %>
    <%= f.inputs do %>
        <%= f.input :radio_id, as: :hidden, value: radio %>
        <%= f.input :volunteer_id, as: :hidden, value: volunteer %>
        <%= f.input :department, collection: Department.where( radio_group_id: radio_group ) %>
        <%= f.action :submit %>
    <% end %>
<% end %>