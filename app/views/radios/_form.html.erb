<%= simple_form_for @radio, wrapper: :inline_form, html: { class: 'form-inline' } do |f| %>
    <%= f.input :radio_group_id, as: :select, collection: RadioGroup.all, prompt: 'Select a group' %>
    <%= f.input :number, placeholder: 'Radio number e.g. 1234' %>
    <%= f.input :notes, placeholder: 'Notes' %>
    <%= f.button :submit, class: 'btn btn-success' %>
<% end %>
