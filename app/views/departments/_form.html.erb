<%= semantic_form_for @department do |f| %>
  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :volunteer, label: "Person responsible", collection: Volunteer.radio_volunteers %>
    <%= f.input :radio_group %>
    <%= f.input :radio_allotment %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit %>
  <% end %>
<% end %>
