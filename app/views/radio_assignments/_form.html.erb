<%= semantic_form_for @radio_assignment do |f| %>
    <%= f.inputs do %>
        <%= f.input :radio %>
        <%= f.input :volunteer %>
        <%= f.input :department, collection: Department.where( radio_group_id: @radio_assignment.radio.radio_group.id ) %>
    <% end %>

    <%= f.actions do %>
        <%= f.action :submit %>
    <% end %>
<% end %>
