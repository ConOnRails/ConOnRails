<h1>Radio Assignment Audit Trail</h1>

<div id='paginator'>
  <%= paginate @radio_assignment_audits %>
</div>

<div class="table-responsive">
<table class="table table-striped sortable">
<thead>
  <tr>
    <th><%= sort_link @q, :radio_name, 'Radio' %></th>
    <th><%= sort_link @q, :volunteer_name, 'Volunteer' %></th>
    <th><%= sort_link @q, :state, 'State' %></th>
    <th><%= sort_link @q, :created_at, 'At' %></th>
    <th><%= sort_link @q, :user_realname, 'By' %></th>
  </tr>
</thead>
<tbody>
<% @radio_assignment_audits.each do |a| %>
  <tr>
    <td><%= a.radio.blank? ? 'NO RADIO' : (link_to a.radio.name, a.radio) %></td>
    <td><%= link_to a.volunteer.name, a.volunteer %></td>
    <td><%= a.state %></td>
    <td><%= a.created_at %></td>
    <td><%= link_to a.user.realname %></td>
  </tr>
<% end %>
</tbody>
</table>
</div>
<% content_for :side do %>
    <div class="col-md-12">
      <div class="well well-sm">
        <div>
          <%=  link_to 'Export CSV', radio_assignment_audits_path(format: :csv) %>
        </div>
        <div>
          <%=  link_to 'Back', :radio_admin_index %>
        </div>
      </div>
    </div>
<% end %>

<div id='paginator'>
  <%= paginate @radio_assignment_audits %>
</div>
