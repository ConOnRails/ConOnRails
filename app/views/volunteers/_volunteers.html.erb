<table>
  <tr>
    <th>Name</th>
    <th>Associated Username</th>
  </tr>

  <% @volunteers.each do |volunteer| %>
      <tr class="<%= cycle('even', 'odd') %>">
        <td><%= link_to volunteer.name, volunteer %></td>
        <td>
          <% if volunteer.user.present? %>
              <%= link_to volunteer.user.name, volunteer.user %>
          <% end %>
        </td>
        <% if current_user and current_user.can_admin_users? %>
            <td><%= link_to 'Edit', edit_volunteer_path(volunteer) %></td>
            <td><%= link_to 'Destroy', volunteer, confirm: 'Are you sure?', method: :delete %></td>
        <% end %>
      </tr>
  <% end %>
</table>

